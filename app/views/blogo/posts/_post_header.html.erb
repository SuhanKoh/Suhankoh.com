<header>
  <h3><%= link_to post.title, blogo_post_path(post) %></h3>

  <div class="posted">
    <span>
      <p><h5><%= t('blogo.user.post_by') %> <%= post.user.name %>
    </span> |
    <span>
      <time datetime="<%= post.published_at %>">
        <%= I18n.localize(post.published_at.to_date, format: :long) %></h5></p>
      </time>
    </span>

    <div class="article-tags">
      <% post.tag_names.each do |tag_name| %>
        <%= link_to tag_name, blogo_tag_path(tag_name), class: 'tag pure-button button-secondary' %>
      <% end %>
    </div>
  </div>
</header>
